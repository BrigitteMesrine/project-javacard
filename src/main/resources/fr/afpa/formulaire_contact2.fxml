<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.afpa.FormulaireContactController2">
    
    <left>
        <VBox spacing="10" padding="10">
            <children>
            <Button text="Tout Selectionner"/>
            <Button text="Deselectionner"/>
            <Button text="Exporter Excel"/>
            <Button text="Exporter Vcard"/>
            </children>
        </VBox>
    </left>
    <center>
<!-- Assurez-vous que le fichier FXML contient les identifiants pour les colonnes du TableView -->
        <TableView fx:id="contactsTable">
            <children>
            <columns>
                 <TableColumn fx:id="nomColumn" text="Nom"/>
                 <TableColumn fx:id="prenomColumn" text="Prénom"/>
                 <TableColumn fx:id="telephoneColumn" text="Téléphone"/>
            </columns>
            </children>
        </TableView>
<!-- Avec cette mise à jour, votre application JavaFX est maintenant capable de gérer les contacts en utilisant un modèle de données Contact, de les afficher dans un TableView et de permettre la création, la modification et la suppression de contacts.-->
    </center>
    <right>
        <VBox spacing="10" padding="10">
            <GridPane hgap="10" vgap="10">
                <Label text="Informations obligatoires"/>
                <Label text="Nom" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="nomField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label text="Prénom" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="prenomField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <Label text="Téléphone personnel" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="telephonePersonnelField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                
                <Label text="Email" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                
                <Label text="Adresse" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="adresseField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                
                <Label text="Code Postal" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="codePostalField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                
                <Label text="Genre" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <HBox GridPane.rowIndex="7" GridPane.columnIndex="1">
                    <RadioButton text="Homme"/>
                    <RadioButton text="Femme"/>
                    <RadioButton text="Non binaire"/>
                </HBox>
            </GridPane>
            
            <GridPane hgap="10" vgap="10">
                <Label text="Informations facultatives"/>
                <Label text="Date de naissance" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="dateNaissanceField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label text="Téléphone professionnel" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="telephoneProfessionnelField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <Label text="Pseudo" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="pseudoField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                
                <Label text="Lien du dépôt git" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="lienDepotGitField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
            
            <HBox spacing="10">
                <Button text="Nouveau"/>
                <Button text="Modifier"/>
                <Button text="Enregistrer"/>
                <Button text="Supprimer"/>
                <Button text="Quitter"/>
            </HBox>
        </VBox>
    </right>
</BorderPane>
