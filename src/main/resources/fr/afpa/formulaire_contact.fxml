<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="mon.application.MonControleur">
    <top>
        <HBox spacing="10">
            <Label text="Logo / Afpa"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Accueil"/>
            <Button text="Contacts"/>
            <Button text="Aide"/>
        </HBox>
    </top>
    <left>
        <VBox spacing="10">
            <Button text="Select All" fx:id="selectAllButton"/>
            <Button text="Clear" fx:id="clearButton"/>
            <Button text="vCard" fx:id="vCardButton"/>
            <Button text="JSON" fx:id="jsonButton"/>
        </VBox>
    </left>
    <center>
        <TableView fx:id="contactsTable">
            <columns>
                <TableColumn text="nom" fx:id="nomColumn"/>
                <TableColumn text="prénom" fx:id="prenomColumn"/>
                <TableColumn text="tél" fx:id="telColumn"/>
            </columns>
        </TableView>
    </center>
    <right>
        <VBox spacing="10">
            <VBox spacing="10">
                <TitledPane text="OBLIGATOIRE*" collapsible="false">
                    <GridPane hgap="10" vgap="10" padding="10">
                        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Tél perso:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <TextField fx:id="telPersoField" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                        <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="prenomField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                        <Label text="Adresse:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="adresseField" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3"/>
                        <Label text="Code postal:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="codePostalField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        <Label text="Genre:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                        <HBox GridPane.rowIndex="3" GridPane.columnIndex="3" spacing="10">
                            <RadioButton text="M" fx:id="genreM"/>
                            <RadioButton text="F" fx:id="genreF"/>
                            <RadioButton text="Autre" fx:id="genreAutre"/>
                        </HBox>
                    </GridPane>
                </TitledPane>
                <TitledPane text="OPTIONNEL" collapsible="false">
                    <GridPane hgap="10" vgap="10" padding="10">
                        <Label text="Date de naissance:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="dateNaissancePicker" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Tél pro:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <TextField fx:id="telProField" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                        <Label text="Pseudo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="pseudoField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Lien git:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="lienGitField" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3"/>
                    </GridPane>
                </TitledPane>
            </VBox>
            <VBox spacing="10">
                <Button text="Nouveau" fx:id="nouveauButton"/>
                <Button text="Modifier" fx:id="modifierButton"/>
                <Button text="Sauvegarder" fx:id="sauvegarderButton"/>
                <Button text="Supprimer" fx:id="supprimerButton"/>
                <Button text="Quitter" fx:id="quitterButton"/>
            </VBox>
        </VBox>
    </right>
</BorderPane>
